/* pages/user/user.wxss */

.top {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 2rpx solid #d0d0d0;
  position: relative;
  display: flex;
  height: 178rpx;
  box-sizing: border-box;
}

.top image {
  height: 138rpx;
  width: 138rpx;
  margin-right: 40rpx;
  border-radius: 10rpx;
  border: 2rpx solid #d0d0d0;
}

.top .namebox {
  display: inline-flex;
  flex-direction: column;
  justify-content: space-around;
}

.top .namebox .name {
  font-size: 38rpx;
  color: #333;
}

.top .namebox .more {
  font-size: 32rpx;
  color: #999;
}

.top:after {
  content: "";
  height: 16rpx;
  display: inline-block;
  width: 16rpx;
  border-right: 6rpx solid #c9c8cd;
  border-bottom: 6rpx solid #c9c8cd;
  transform: translateY(-50%) rotate(-45deg);
  margin-top: 6rpx;
  position: absolute;
  top: 50%;
  right: 50rpx;
}

.btnAdd{
  width: 50px; 
  height: 50px;
  position: fixed;
  right: 10rpx;
  bottom: 10rpx;
}

.my-list{
	border-bottom: 1rpx solid #ddd;
	padding: 20rpx;
	font-size: 32rpx;
	background: #fff url('../../images/xiangyou1.png') no-repeat 98% 50% / auto 36rpx;
}
.my-list image{
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
	vertical-align: -6rpx;
}